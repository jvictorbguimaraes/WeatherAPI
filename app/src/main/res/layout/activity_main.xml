<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#459CDD"
    android:padding="30dp">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxWidth="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_weight=".10"
                android:text="City:"
                android:textColor="#FDFFFFFF"
                android:textSize="20dp"
                app:fontFamily="@font/alice" />

            <EditText
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".90"
                android:text="Toronto"
                android:textColor="#FDFFFFFF" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxWidth="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="Country:"
                android:textColor="#FDFFFFFF"
                android:textSize="20dp"
                app:fontFamily="@font/alice" />

            <EditText
                android:id="@+id/country"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_weight=".90"
                android:text="CA"
                android:textColor="#FDFFFFFF" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FD070C36"
            android:onClick="getWeather"
            android:text="Check"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FD070C36"
            android:typeface="normal" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Weather"
                android:textColor="#FD070C36"
                android:textSize="20dp"
                app:fontFamily="@font/alice"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FDFFFFFF"
                android:textSize="16dp"
                app:fontFamily="@font/alice" />
        </LinearLayout>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forecast for Next 3 Days"
                android:textColor="#FD070C36"
                android:textSize="20dp"
                app:fontFamily="@font/alice"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageForecast1"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/forecast1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FDFFFFFF"
                android:textSize="15dp"
                app:fontFamily="@font/alice" />

            <ImageView
                android:id="@+id/imageForecast2"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/forecast2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FDFFFFFF"
                android:textSize="15dp"
                app:fontFamily="@font/alice" />

            <ImageView
                android:id="@+id/imageForecast3"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/forecast3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FDFFFFFF"
                android:textSize="15dp"
                app:fontFamily="@font/alice" />


        </LinearLayout>

    </TableRow>

</TableLayout>